- var NEW_1 = LANG.new_1.content;

.new-content
	.container
		.new-content__wrapper
			.new-content__photo
				img.new-content__img(src="/img/new_4.jpg", alt="photo")
			.new-content__desc
				each text in NEW_1.block_1
					p.new-content__text.text-2.text-2--1!= text
				p.new-content__text.text-2.text-2--1.new-content__text--bold.title.title--dark= NEW_1.title_1
				each text in NEW_1.block_2
					p.new-content__text.text-2.text-2--1!= text
				p.new-content__text.text-2.text-2--1.new-content__text--bold.title.title--dark= NEW_1.title_2
				each text in NEW_1.block_3
					p.new-content__text.text-2.text-2--1!= text
				p.new-content__text.text-2.text-2--1.new-content__text--bold.title.title--dark= NEW_1.title_3
				each text in NEW_1.block_4
					p.new-content__text.text-2.text-2--1!= text