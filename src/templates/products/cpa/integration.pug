- var INTEGRATION_CPA = LANG.cpa.integration;

include ../../mixins/list-optm

section.integration.integration--cpa
	.container
		h2.integration__title.title.title--dark.title--2!= INTEGRATION_CPA.title_main
		p.integration__subtitle.text-2--2!= INTEGRATION_CPA.desc
		.integration__wrap
			.integration__col
				img.integration__img(src="/img/svg/integration_cpa_1.svg", alt="integration_crm")
			.integration__info
				h2.integration__ttl.title.title--dark.title--3!= INTEGRATION_CPA.title
				+list-optm(INTEGRATION_CPA.listArray)
	.integration__center
		h2.integration__ttl-small.title.title--dark.title--4= INTEGRATION_CPA.title_slider
		.integration__slider.slider-int.js-integration-slider
			.slider-int__photo
				picture
					source(srcset="/img/integration_slider_cpa_1@2x.jpg 2x, /img/integration_slider_cpa_1.webp 1x")
					img(src="/img/integration_slider_cpa_1.jpg", alt="photo")
			.slider-int__photo
				picture
					source(srcset="/img/integration_slider_cpa_2@2x.jpg 2x, /img/integration_slider_cpa_2.webp 1x")
					img(src="/img/integration_slider_cpa_2.jpg", alt="photo")
			.slider-int__photo
				picture
					source(srcset="/img/integration_slider_cpa_3@2x.jpg 2x, /img/integration_slider_cpa_3.webp 1x")
					img(src="/img/integration_slider_cpa_3.jpg", alt="photo")
			.slider-int__photo
				picture
					source(srcset="/img/integration_slider_cpa_3@2x.jpg 2x, /img/integration_slider_cpa_3.webp 1x")
					img(src="/img/integration_slider_cpa_3.jpg", alt="photo")
	.container
		.integration__bottom
			.integration__desc
				h2.integration__subject.title.title--dark.title--3= INTEGRATION_CPA.subject
				p.integration__text.text-2.text-2--1= INTEGRATION_CPA.text
			img.integration__photo(src="/img/svg/integration_cpa_2.svg", alt="integration_cpa")