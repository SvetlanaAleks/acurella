- var FAQ_SCM = LANG.scm.faq;

include ../../mixins/question

section.faq
	.container
		.faq__wrapper
			.faq__left.column-big
				h2.faq__title.title.title--dark.title--2= FAQ_SCM.title
				.faq__info.faq__info--desc
					p.faq__text.text-3= FAQ_SCM.desc
					a.faq__link-email(href="mailto:support@acurella-tl.com") support@acurella-tl.com
			.faq__right.js-accordeon
				each question in FAQ_SCM.questionArray
					+question(question)
			.faq__info.faq__info--mob
				p.faq__text.text-3= FAQ_SCM.desc
				a.faq__link-email(href="mailto:support@acurella-tl.com") support@acurella-tl.com