- var MENU = LANG.menu;
- var BUTTONS = LANG.btns;

mixin menu-mob(page)
	.menu-mobile#js-mobile-menu
		.menu-mobile__wrap
			.menu-mobile__top
				a.logo.menu-mobile__logo(href="index.html")
					img.logo__img(src="/img/svg/logo-w.svg", alt="logo")
				.burger.js-burger(data-target="#js-mobile-menu")
					span.burger__line
					span.burger__line
					span.burger__line
			ul.menu-mobile__nav.nav
					li.nav__item
						a.nav__link(href="about.html")= MENU.link1
					li.nav__item
						a.nav__link(href='product-cpa.html')= MENU.link3
					li.nav__item
						a.nav__link(href="product-crm.html")= MENU.link4
					li.nav__item
						a.nav__link(href="product-scm.html")= MENU.link5
					li.nav__item
						a.nav__link(href="case.html")= MENU.link7
					li.nav__item
						a.nav__link(href="integrations.html")= MENU.link6
					li.nav__item
						a.nav__link(href="contacts.html")= MENU.link8
			.menu-mobile__bottom
				.menu-mobile__lang.lang
					i.fico.fico-world
					.lang__list-wrap
							.lang__list
								a.lang-item(href=`/en/${page}.html`)
									img.lang-item__ico(src="/img/svg/langEN.svg", alt="langEN")
									span.lang-item__text International
								a.lang-item(href=`/${page}.html`)
									img.lang-item__ico(src="/img/svg/langRU.svg", alt="langRU")
									span.lang-item__text Русский
				button.menu-mobile__btn.btn.btn--full.js-show-popup(data-target="#popup-demo")= BUTTONS.btn_text_1